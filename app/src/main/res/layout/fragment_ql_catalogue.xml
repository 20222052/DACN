<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/popup_layout"
        android:layout_width="650dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/borders_view"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">
        <TextView
            android:id="@+id/tv_cart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quản lý danh mục"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="8dp" />
        <EditText
            android:id="@+id/edt_catalogue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Tên danh mục" />
        <GridView
            android:id="@+id/gv_cart_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:horizontalSpacing="8dp"
            android:verticalSpacing="8dp"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_add_catalogue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Thêm" />

            <Button
                android:id="@+id/btn_edit_catalogue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Sửa" />

            <Button
                android:id="@+id/btn_remove_catalogue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:text="Xóa" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
